# =============================================================================
# Industrial Automation Suite - Configuration
# =============================================================================
# Copy this file to .env and adjust the values.
# IMPORTANT: Generate secure passwords and secrets for production environments!
# =============================================================================

# -----------------------------------------------------------------------------
# PostgreSQL Configuration
# -----------------------------------------------------------------------------
POSTGRES_USER=automation
POSTGRES_PASSWORD=CHANGE_ME_secure_password_here
POSTGRES_DB=automation

# -----------------------------------------------------------------------------
# NocoDB Configuration
# -----------------------------------------------------------------------------
# JWT Secret for authentication (min. 32 characters recommended)
# Generate with: openssl rand -hex 32
NOCODB_JWT_SECRET=CHANGE_ME_generate_with_openssl_rand_hex_32
NOCODB_PORT=8080
NOCODB_PUBLIC_URL=http://localhost:8080

# -----------------------------------------------------------------------------
# n8n Configuration
# -----------------------------------------------------------------------------
# Encryption key for credentials (min. 32 characters)
# Generate with: openssl rand -hex 32
N8N_ENCRYPTION_KEY=CHANGE_ME_generate_with_openssl_rand_hex_32
N8N_PORT=5678
N8N_HOST=localhost
N8N_PROTOCOL=http
N8N_WEBHOOK_URL=http://localhost:5678

# -----------------------------------------------------------------------------
# Metabase Configuration
# -----------------------------------------------------------------------------
# Secret key for encryption (min. 16 characters)
# Generate with: openssl rand -hex 32
METABASE_SECRET_KEY=CHANGE_ME_generate_with_openssl_rand_hex_32
METABASE_PORT=3000

# -----------------------------------------------------------------------------
# Uptime Kuma Configuration
# -----------------------------------------------------------------------------
UPTIME_KUMA_PORT=3001

# -----------------------------------------------------------------------------
# General Settings
# -----------------------------------------------------------------------------
TIMEZONE=Europe/Berlin
